<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper:根标签，namespace：命名空间，应该为对应Dao接口的类路径 -->
<mapper namespace="com.learn.mybatis.dao.StudentDao">
    <!-- statement，内容：sql语句。id：唯一标识，随便写，在同一个命名空间下保持唯一
       resultType：sql语句查询结果集的封装类型,tb_user即为数据库中的表
     -->
    <select id="getStudentById" resultType="com.learn.mybatis.bean.Student">
      select * from students where id = #{id}
   </select>
    <select id="getStudents" resultType="com.learn.mybatis.bean.Student">
        select * from students
    </select>
</mapper>